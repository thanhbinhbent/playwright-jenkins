pipeline {
    agent any

    stages {
        stage('Run tests in Docker') {
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:v1.45.1-jammy'
                    args '-u root' // Chạy container với quyền root (nếu cần thiết)
                    reuseNode true // Tùy chọn để tái sử dụng node Docker
                }
            }
            steps {
                sh 'npm ci'
                sh 'npx playwright test'
            }
        }
    }
}
